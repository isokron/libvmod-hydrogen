varnishtest "Test hydrogen vmod"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import std;
	import hydrogen from "${pwd}/../.libs/libvmod_hydrogen.so";

	sub vcl_deliver {
		set resp.http.hello = hydrogen.encrypt("the brown fox jumped over the lazy dog", "key");
		set resp.http.hello2 = hydrogen.decrypt(resp.http.hello, "key");
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.hello2 == "the brown fox jumped over the lazy dog"
} -run
